<!-- Book Modal -->
<div class="modal fade" id="bookModalCenter" tabindex="-1" role="dialog" aria-labelledby="bookModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="bookModalLongTitle"> <%= book.name %> </h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="t">
          <div class="tc rel">

            <div class="book" id="book">
              <div class='hard'> 
                <%= image_tag "#{to_folder_name(book.name)}/webp/cover.webp", class: "page static-img-js"%> 
              </div>
              <div class='hard'> 
                <%= image_tag "#{to_folder_name(book.name)}/webp/first-page.webp", class: "page static-img-js" %> 
              </div>

             <!-- lazy load the rest of the pages on clicking modal -->
              <% (2..book.page_count - 2).each do | page | %>
                <div> 
                  <%= image_tag "", image_placeholder: "#{to_folder_name(book.name)}/webp/page-#{page}.webp", class: "page lazy"%>
                </div>
              <% end %>

              <div> 
                <%= image_tag "", image_placeholder: "#{to_folder_name(book.name)}/webp/penultimate-page.webp", class: "page lazy" %> 
              </div>

              <div class='hard'> <%= image_tag "", image_placeholder: "#{to_folder_name(book.name)}/webp/last-page.webp", class: "page lazy" %> </div>
              <div class='hard'> <%= image_tag "", image_placeholder: "#{to_folder_name(book.name)}/webp/back-cover.webp", class: "page lazy" %> </div>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
