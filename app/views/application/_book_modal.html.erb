<!-- Reusable Book Modal -->
<div class='modal fade' id="bookModalCenter<%= book.id %>" tabindex='-1' role='dialog' aria-labelledby='bookModalCenterTitle' aria-hidden='true'>
  <div class='modal-dialog modal-dialog-centered' role='document'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h3 class='clickMeText'> Click the top right of the book! </h3>
        <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
          <span aria-hidden='true'>&times;</span>
        </button>
      </div>
      
      <div class='modal-body'>
        <div class='t'>
          <div class='tc rel'> 
            <%= tag(:div, class: 'book', id: book.name.downcase, data: { format: book.format, width: book.pixel_width, height: book.pixel_height }) %>
              <div class='hard'> 
                <%= image_tag "#{to_folder_name(book.name)}/webp/cover.webp", class: 'page static-img-js'%> 
              </div>
              <div class='hard'> 
                <%= fingerprinted_dual_format_lazy_image(book.name, "first-page") %>
              </div>

             <!-- lazy load the rest of the pages upon clicking modal -->
              <% (2..book.page_count - 2).each do | page | %>
                <div> 
                  <%= fingerprinted_dual_format_lazy_image(book.name, page) %>
                </div>
              <% end %>

              <div> 
                <%= fingerprinted_dual_format_lazy_image(book.name, "penultimate-page") %> 
              </div>

              <!-- last two pages (the last page and the back cover) represent the hardcover back of the book -->
              <div class='hard'>
                <%= fingerprinted_dual_format_lazy_image(book.name, "last-page") %>
              </div>

              <div class='hard'> 
                <%= fingerprinted_dual_format_lazy_image(book.name, "back-cover") %>
              </div>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>