        </div>
      </div>
      <img src="https://blackrockdigital.github.io/startbootstrap-grayscale/img/ipad.png" class="img-fluid" alt="">
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="projects-section bg-light">
    <div class="container">

      <!-- Featured Project Row -->
      <div class="row align-items-center no-gutters mb-4 mb-lg-5">
        <div class="col-xl-6 col-lg-7">
          <%= image_tag "sir_joe/cover", style: "max-height: 500px" %>
        </div>
        <div class="col-xl-4 col-lg-5">
          <div class="featured-text text-center text-lg-left">
            <h4>Sir Joe's Quest</h4>
            <p class="text-black-50 mb-0">Sir Joe of the Picnic Table goes on a quest to find the source of flame coming from another castle</p>
          </div>
        </div>
      </div>

      <!-- Project One Row -->
      <div class="row justify-content-center no-gutters mb-5 mb-lg-0">
        <div class="col-lg-6">
          <%= image_tag "sandy_school/cover", class: 'img-fluid'%>
        </div>
        <div class="col-lg-6">
          <div class="bg-black text-center h-100 project">
            <div class="d-flex h-100">
              <div class="project-text w-100 my-auto text-center text-lg-left">
                <h4 class="text-white">Miss Dolphin's Class</h4>
                <p class="mb-0 text-white-50">Miss Dolphin teaches a class of young sea creatures.</p>
                <br>
                <%= render partial: "book_modal" %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Project Two Row -->
      <div class="row justify-content-center no-gutters">
        <div class="col-lg-6">
          <img class="img-fluid" src="https://blackrockdigital.github.io/startbootstrap-grayscale/img/demo-image-02.jpg" alt="">
        </div>
