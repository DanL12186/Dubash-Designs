        </div>
      </div>

    </div>
  </section>

  <!-- BOOK SECTION -->
  <section class="book-section bg-black">
    <%= render partial: "book_modal" %>
  </section>

  <!-- Signup Section -->
  <section id="signup" class="signup-section">
    <div class="container">
      <div class="row">
        <div class="col-md-10 col-lg-8 mx-auto text-center">

